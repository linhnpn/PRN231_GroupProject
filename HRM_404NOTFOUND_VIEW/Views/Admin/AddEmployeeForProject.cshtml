@model GroupProject_HRM_Library.DTOs.EmployeeProject.CreateEmployeeProjectRequest
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Project";
}

<div>
    <h3>Add Employee for a Project</h3>
    <hr />
</div>
<form method="post" asp-action="AddEmployeeForProject">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.ProjectID" value="ViewBag.ProjectID"/>
    <div class="row">
        <div class="form-group col-8">
            <label class="control-label">Employee: </label>
            <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.Employees">
                <option value="">--Please Select a Employee--</option>
            </select>
            <span asp-validation-for="EmployeeID" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label class="control-label">Status: </label>
            <select asp-for="EmployeeProjectStatus" class="form-control" asp-items="ViewBag.EmployeeProjectStatuses">
                <option value="">--Please Select a Overtime Log Status--</option>
            </select>
            <span asp-validation-for="EmployeeProjectStatus" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label class="control-label">Start Date:</label>
            <input asp-for="StartDate" class="form-control" type="date">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="control-label">End Date:</label>
            <input asp-for="EndDate" class="form-control" type="date">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group float-right mt-3">
        <input type="hidden" asp-for="ProjectID" />
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
