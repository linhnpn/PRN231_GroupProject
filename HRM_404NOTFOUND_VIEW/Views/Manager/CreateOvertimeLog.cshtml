@model GroupProject_HRM_Library.DTOs.OvertimeLog.OvertimeLogRequest
@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewData["Title"] = "Create Overtime Log";
}

<div>
    <h3>Create Overtime Log</h3>
    <hr />
</div>
<form method="post" asp-action="CreateOvertimeLog">
    <div class="row">
        <div class="form-group col-8">
            <label class="control-label">Employee: </label>
            <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.Employees">
                <option value="">--Please Select a Employee--</option>
            </select>
            <span asp-validation-for="EmployeeID" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label class="control-label">Status: </label>
            <select asp-for="OvertimeLogStatus" class="form-control" asp-items="ViewBag.LeaveLogStatuses">
                <option value="">--Please Select a Overtime Log Status--</option>
            </select>
            <span asp-validation-for="OvertimeLogStatus" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label class="control-label">Overtime Date:</label>
            <input asp-for="OverTimeDate" class="form-control" type="date">
            <span asp-validation-for="OverTimeDate" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="control-label">Number of hours:</label>
            <input asp-for="Hours" class="form-control" type="number">
            <span asp-validation-for="Hours" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-12">
            <label class="control-label">Description:</label>
            <textarea style="height: 35vh" rows="5" class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group float-right mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div class="mt-2">
    <a href="/Manager/LeaveLogIndex" class="btn btn-danger">Back to Home Page</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
