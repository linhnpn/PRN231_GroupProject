@model GroupProject_HRM_Library.DTOs.Employee.GetProfileResponse
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Profile";
}
<style>
    .content {
        padding: 10px 15px 20px 15px;
    }
</style>
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Your Profile</h4>
                </div>
                <div class="content">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Phone Number"
                                           value="@Model.PhoneNumber" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email"
                                           value="@Model.EmailAddress"
                                           class="form-control"
                                           placeholder="Email" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Company"
                                           value="@Model.EmployeeName" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Home Address"
                                           value="@Model.Address" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Gender"
                                           value="@Model.Gender" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Birthdate</label>
                                    <input type="date"
                                           class="form-control"
                                           placeholder="Birth Date"
                                           value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Status</label>
                                    <input type="text"
                                           value="@((Model.EmployeeStatus == 1) ? "Current" : "Clock")"
                                           class="form-control"
                                           placeholder="ZIP Code" />
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-user">
                <div class="image">
                    <img style="width: 100%" src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400"
                         alt="..." />
                </div>
                <div class="content">
                    <div class="author">
                        <a href="#">
                            <img class="avatar border-gray"
                                 src="@Model.EmployeeImage"
                                 alt="..." />

                            <h4 class="title">
                                @Model.EmployeeName<br />
                                <small>@Model.UserName</small>
                            </h4>
                        </a>
                    </div>
                    <p class="description text-center">
                        <br />
                        <br />
                        <br />
                    </p>
                </div>
                <hr />
                <div class="text-center">
                    <button href="#" class="btn btn-simple">
                        <i class="fa fa-facebook-square"></i>
                    </button>
                    <button href="#" class="btn btn-simple">
                        <i class="fa fa-twitter"></i>
                    </button>
                    <button href="#" class="btn btn-simple">
                        <i class="fa fa-google-plus-square"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}